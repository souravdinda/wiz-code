{
  "kind": "Pod",
  "metadata": {
    "name": "web-app",
    "annotations": {}
  },
  "spec": {
    "containers": [{
      "name": "nginx",
      "image": "nginx:1.21",
      "resources": {
        "limits": {
          "cpu": "500m",
          "memory": "512Mi"
        },
        "requests": {
          "cpu": "250m",
          "memory": "256Mi"
        }
      }
    }]
  }
}

