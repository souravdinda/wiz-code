{
  "kind": "Pod",
  "metadata": {
    "name": "web-app",
    "namespace": "production"
  },
  "spec": {
    "containers": [{
      "name": "nginx",
      "image": "nginx:1.21",
      "livenessProbe": {
        "httpGet": {
          "path": "/health",
          "port": 8080
        }
      },
      "readinessProbe": {
        "httpGet": {
          "path": "/ready",
          "port": 8080
        }
      }
    }]
  }
}

