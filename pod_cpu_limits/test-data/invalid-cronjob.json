{
  "kind": "CronJob",
  "metadata": {
    "name": "scheduled-job",
    "annotations": {}
  },
  "spec": {
    "jobTemplate": {
      "spec": {
        "template": {
          "spec": {
            "containers": [{
              "name": "worker",
              "image": "worker:1.0",
              "resources": {
                "requests": {
                  "cpu": "100m",
                  "memory": "128Mi"
                }
              }
            }]
          }
        }
      }
    }
  }
}

