{
  "kind": "DaemonSet",
  "metadata": {
    "name": "node-exporter",
    "namespace": "monitoring"
  },
  "spec": {
    "template": {
      "spec": {
        "containers": [
          {
            "name": "exporter",
            "image": "node-exporter:1.0",
            "resources": {
              "limits": {
                "cpu": "200m",
                "memory": "256Mi"
              },
              "requests": {
                "cpu": "100m"
              }
            }
          }
        ]
      }
    }
  }
}